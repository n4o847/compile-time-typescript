{
  "testMatch": [
    "<rootDir>/src/**/__tests__/**/*.+(ts|js)",
    "<rootDir>/src/**/?(*.)+(spec|test).+(ts|js)",
    "<rootDir>/tests/**/*.+(ts|js)",
    "<rootDir>/examples/**/__tests__/**/*.+(ts|js)",
    "<rootDir>/examples/**/?(*.)+(spec|test).+(ts|js)"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  }
}
